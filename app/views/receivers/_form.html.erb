<%= simple_form_for(@receiver) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :part_number %>
    <%= f.input :size %>
    <%= f.input :channels %>
    <%= f.input :has_gov %>
    <%= f.input :has_fbl_unit %>
    <%= f.input :has_volt_reg %>
    <%= f.input :manufacturer_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
