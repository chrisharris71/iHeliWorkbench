<%= provide(:title, 'Sign up') %>
<div class="row">
	<%= render 'sign_in' %>
  <div class="span5 form2">
  	<h2>Register a new account</h2>
    <%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages' %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Register >>", class: "btn btn-large btn-primary create" %>
    <% end %>
  </div>
</div>
