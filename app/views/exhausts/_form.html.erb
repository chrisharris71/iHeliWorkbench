<%= simple_form_for(@exhaust) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :part_number %>
    <%= f.input :size %>
    <%= f.input :works_with %>
    <%= f.input :manufacturer_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
