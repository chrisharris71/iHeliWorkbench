<% provide(:title, "Edit user") %> 


<div class="row">
	
  <div class="span5 form">
  <h2>Update your profile</h2>
  <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Save changes", class: "btn btn-large btn-primary update" %>
    <% end %>
	</div>
    
    <div class="span5 form3">
    	<h2>Edit your Gravatar Image</h2>
    	<%= gravatar_for @user, size: 75 %>
    <p><br /><a href="http://gravatar.com/emails">Change</a></p>
    
  </div>
</div>